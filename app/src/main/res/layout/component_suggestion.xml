<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSuggestion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ProgressBar
            android:id="@+id/progressSuggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardIconBg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/ivSuggestionIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_zap"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layoutSuggestionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/cardIconBg"
            android:layout_toStartOf="@+id/btnSuggestionCta"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:id="@+id/tvSuggestionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="잘하고 있어요!"
                android:textStyle="bold"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tvSuggestionDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="균형 잡힌 식단을 유지하고 있습니다."
                android:textColor="@color/text_sub_light"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btnSuggestionCta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리포트 보기"
            android:textColor="@color/primary_blue"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:drawableEndCompat="@drawable/ic_arrow_right"
            android:drawableTint="@color/primary_blue" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>