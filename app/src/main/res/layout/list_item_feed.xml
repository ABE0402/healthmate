<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivFeedIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_utensils"
                android:padding="6dp"
                android:background="@drawable/bg_light_gray_rounded" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">
                <TextView
                    android:id="@+id/tvFeedContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="박상호님이 아침으로 ... 기록했습니다."
                    android:textColor="@color/text_primary_light" />
                <TextView
                    android:id="@+id/tvFeedTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방금 전"
                    android:textSize="12sp"
                    android:textColor="@color/text_sub_light" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnLike"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="응원하기"
            android:textSize="12sp"
            android:textColor="@color/text_sub_light"
            android:drawableLeft="@drawable/ic_thumbs_up"
            android:drawablePadding="4dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>